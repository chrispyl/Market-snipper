<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.christos.embeddedscanner.MainMenu">

    <Button
        android:id="@+id/bttnScan"
        android:textSize="20sp"
        android:text="@string/scan_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elegantTextHeight="false"
        android:layout_marginTop="63dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/bttnFavourites"
        android:textSize="20sp"
        android:text="@string/favourites_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elegantTextHeight="false"
        android:layout_below="@+id/bttnScan"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp" />

    <Button
        android:id="@+id/bttnBasket"
        android:textSize="20sp"
        android:text="@string/basket_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elegantTextHeight="false"
        android:layout_below="@+id/bttnFavourites"
        android:layout_alignLeft="@+id/bttnScan"
        android:layout_alignStart="@+id/bttnScan"
        android:layout_marginTop="63dp" />

</RelativeLayout>
