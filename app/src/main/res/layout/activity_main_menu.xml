<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/white"
    tools:context="com.example.christos.embeddedscanner.MainMenu">

    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        >

        <ImageButton
            android:id="@+id/bttnScan"
            android:background="@drawable/scanbuttonchanger"
            android:layout_centerHorizontal="true"
            android:layout_width="80dp"
            android:layout_height="60dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bttnScan"
            android:layout_marginTop="0dp"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:text="@string/scan_button"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        >
        <ImageButton
            android:id="@+id/bttnFavourites"
            android:layout_width="65dp"
            android:layout_height="62dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/heartbuttonchanger"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="62dp"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:text="@string/favourites_button" />
        </RelativeLayout>

    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        >
        <ImageButton
            android:id="@+id/bttnBasket"
            android:layout_centerHorizontal="true"
            android:layout_width="70dp"
            android:layout_height="55dp"
            android:background="@drawable/basketbuttonchanger"

             />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bttnBasket"
            android:layout_marginTop="0dp"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:text="@string/basket_button"/>
        </RelativeLayout>

</RelativeLayout>
